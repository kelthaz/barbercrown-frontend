{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client","node", "react", "react-dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist", 
    "rootDir": "./src", 
    
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
